# --- FBI Crime Data API (get a free key: https://api.data.gov/signup/) ---
FBI_API_KEY=

# Either leave this blank to auto-lookup Santa Fe's ORI, or set a base URL ending with api_key=
FBI_API_URL_BASE=

# Auto-lookup tuning (used only if FBI_API_URL_BASE is blank)
FBI_STATE_ABBR=NM
FBI_CITY_NAME=SANTA FE
FBI_FROM_YEAR=2019
FBI_TO_YEAR=2025

# --- Tourism data (direct CSV/JSON link). Leave blank to use sample file ---
TOURISM_DATA_URL=

# --- Google Sheets (optional; auto-enables if set) ---
GOOGLE_APPLICATION_CREDENTIALS=./config/service_account.json
GOOGLE_SHEETS_DOC_NAME=Santa Fe Dashboard Data
CRIME_SHEET_NAME=crime_data
TOURISM_SHEET_NAME=tourism_data
